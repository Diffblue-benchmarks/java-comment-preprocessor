
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.igormaznitsa</groupId>
    <artifactId>JCPreprocessor-test</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Test of Preprocessor Mojo</name>
    <description>The pom is used for test purposes</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.igormaznitsa</groupId>
                <artifactId>jcp</artifactId>
                <goals>
                    <goal>preprocess</goal>
                </goals>
                <configuration>
                    <source>
                        <folder>/</folder>
                        <folder>/some</folder>
                        <folder>/another/some</folder>
                    </source>
                    <copyFileAttributes>true</copyFileAttributes>
                    <destination>destination_dir</destination>
                    <excluded>
                        <ext>xml</ext>
                        <ext>html</ext>
                    </excluded>
                    <processing>
                        <ext>java</ext>
                        <ext>txt</ext>
                    </processing>
                    <inEncoding>UTF-16</inEncoding>
                    <outEncoding>US-ASCII</outEncoding>
                    <keepSrcRoot>true</keepSrcRoot>
                    <removeComments>true</removeComments>
                    <disableOut>true</disableOut>
                    <verbose>true</verbose>
                    <compareDestination>true</compareDestination>
                    <clear>true</clear>
                    <keepLines>true</keepLines>
                    <careForLastNextLine>true</careForLastNextLine>
                    <allowWhitespace>true</allowWhitespace>
                    <preserveIndent>true</preserveIndent>
                    <unknownVarAsFalse>true</unknownVarAsFalse>>
                    <excludedFolders>
                      <folder>.git</folder>
                      <folder>.hg</folder>
                      <folder>**/.cvs</folder>
                      <folder>c:\hello\**\world</folder>
                    </excludedFolders>
                    <cfgFiles>
                        <file>test1.cfg</file>
                        <file>test2.cfg</file>
                    </cfgFiles>    
                    <globalVars>
                        <globalvar1>3</globalvar1>
                        <globalvar2>hello world</globalvar2>
                    </globalVars>
                </configuration>
            </plugin>
        </plugins>
            
    </build>    

</project>
